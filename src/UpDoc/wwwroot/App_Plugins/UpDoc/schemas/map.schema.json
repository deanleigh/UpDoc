{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://updoc.dev/schemas/map.schema.json",
  "title": "UpDoc Mapping Configuration",
  "description": "Defines mappings from source sections to destination fields.",
  "type": "object",
  "required": ["$schema", "version", "mappings"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for IDE validation."
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Schema version.",
      "default": "1.0"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for this mapping configuration."
    },
    "description": {
      "type": "string",
      "description": "What this mapping is for."
    },
    "mappings": {
      "type": "array",
      "description": "List of source-to-destination mappings.",
      "items": { "$ref": "#/$defs/mapping" }
    }
  },
  "$defs": {
    "mapping": {
      "type": "object",
      "description": "A single mapping from a source section to one or more destinations.",
      "required": ["source", "destinations"],
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string",
          "description": "Key from source.json sections (e.g., 'title', 'itinerary')."
        },
        "destinations": {
          "type": "array",
          "description": "One or more destination targets.",
          "minItems": 1,
          "items": { "$ref": "#/$defs/destination" }
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether this mapping is active.",
          "default": true
        },
        "comment": {
          "type": "string",
          "description": "Documentation note about this mapping."
        }
      }
    },
    "destination": {
      "type": "object",
      "description": "A target for the extracted content.",
      "required": ["target"],
      "additionalProperties": false,
      "properties": {
        "target": {
          "type": "string",
          "description": "Key from destination.json (field key, or blockGrid.block.property path)."
        },
        "transforms": {
          "type": "array",
          "description": "Transformations to apply before writing.",
          "items": { "$ref": "#/$defs/transform" }
        }
      }
    },
    "transform": {
      "type": "object",
      "description": "A transformation to apply to the extracted content.",
      "required": ["type"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "convertMarkdownToHtml",
            "convertHtmlToMarkdown",
            "truncate",
            "template",
            "regex",
            "trim",
            "uppercase",
            "lowercase",
            "stripHtml"
          ],
          "description": "The transformation type."
        },
        "params": {
          "type": "object",
          "description": "Parameters for the transformation.",
          "additionalProperties": true,
          "properties": {
            "maxLength": {
              "type": "integer",
              "description": "[truncate] Maximum character length."
            },
            "suffix": {
              "type": "string",
              "description": "[truncate] Suffix to add when truncated.",
              "default": "..."
            },
            "template": {
              "type": "string",
              "description": "[template] Template string with {value} placeholder."
            },
            "pattern": {
              "type": "string",
              "description": "[regex] Regex pattern to match."
            },
            "replacement": {
              "type": "string",
              "description": "[regex] Replacement string."
            }
          }
        }
      }
    }
  }
}
