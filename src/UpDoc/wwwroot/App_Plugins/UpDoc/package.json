{
  "name": "updoc",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "copy:pdfworker": "node -e \"require('fs').copyFileSync('node_modules/pdfjs-dist/build/pdf.worker.min.mjs','dist/pdf.worker.min.mjs')\"",
    "build": "vite build && npm run copy:pdfworker",
    "dev": "vite build --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "1.56",
    "@types/node": "^25.2.3",
    "@umbraco/json-models-builders": "^2.0.42",
    "@umbraco/playwright-testhelpers": "^17.0.15",
    "dotenv": "^16.3.1",
    "tslib": "^2.8.1",
    "typescript": "^5.4.0",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "marked": "^17.0.1",
    "pdfjs-dist": "^4.2.67"
  }
}
