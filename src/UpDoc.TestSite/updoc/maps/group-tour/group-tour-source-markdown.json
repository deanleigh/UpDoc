{
  "$schema": "../../../../UpDoc/wwwroot/App_Plugins/UpDoc/schemas/source.schema.json",
  "version": "1.0",
  "sourceTypes": ["markdown"],
  "sections": [
    {
      "key": "title",
      "label": "Tour Title",
      "description": "The main title of the tour (first H1 heading)",
      "strategy": "firstHeading",
      "outputFormat": "text",
      "required": true,
      "strategyParams": {
        "level": 1
      }
    },
    {
      "key": "description",
      "label": "Tour Description",
      "description": "Brief summary including duration and price (first paragraph after title)",
      "strategy": "firstParagraph",
      "outputFormat": "text",
      "required": true
    },
    {
      "key": "itinerary",
      "label": "Suggested Itinerary",
      "description": "Day-by-day breakdown of the tour (from Suggested Itinerary heading to Featuring)",
      "strategy": "betweenPatterns",
      "outputFormat": "markdown",
      "required": true,
      "strategyParams": {
        "startPattern": "^### Day\\s+\\d+",
        "stopPatterns": ["^## Featuring", "^## Features"],
        "includeStartLine": true
      }
    },
    {
      "key": "features",
      "label": "Features",
      "description": "List of tour features and inclusions",
      "strategy": "betweenPatterns",
      "outputFormat": "markdown",
      "required": false,
      "strategyParams": {
        "startPattern": "^## Featuring",
        "stopPatterns": ["^## Accommodation"],
        "includeStartLine": false
      }
    },
    {
      "key": "accommodation",
      "label": "Accommodation",
      "description": "Hotel and accommodation details",
      "strategy": "betweenPatterns",
      "outputFormat": "markdown",
      "required": false,
      "strategyParams": {
        "startPattern": "^## Accommodation",
        "stopPatterns": [],
        "includeStartLine": false
      }
    }
  ]
}
